<header class="my-4">
  <h1 class="h3"><a href="<%= page_path %>"><%= title %></a></h1>
</header>

<main class="my-4">
  <%= content %>

  <% if tags.any? %>
    <ul class="list-inline my-4">
      <% tags.each do |tag| %>
        <li class="list-inline-item"><a href="/tags/<%= tag %>" class="btn btn-sm btn-outline-secondary"><%= tag %></a></li>
      <% end %>
    </ul>
  <% end %>

  <% if related_pages.any? %>
    <p class="my-4">Somewhat related:</p>
    <ul>
      <% related_pages.each do |page| %>
        <li class="my-2">
          <a href="<%= page["page_path"] %>"><%= page["title"] %></a>
          <% if page["published_at"] %>
            <small class="text-muted"><time datetime="<%= page["published_at"].to_time %>"><%= page["published_at"].strftime("%Y/%m/%d") %></time></small>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% end %>
</main>
